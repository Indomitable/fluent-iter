{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "lib": [
      "ES2020"
    ],
    "declaration": true,
    "strict": true,
    "sourceMap": false,
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowJs": true,
    "alwaysStrict": true,
    "types": [
      "vitest"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
